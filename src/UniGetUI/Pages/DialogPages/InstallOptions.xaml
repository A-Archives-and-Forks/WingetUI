<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="UniGetUI.Interface.Dialogs.InstallOptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UniGetUI.Interface.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:UniGetUI.Interface.Widgets"
    HorizontalAlignment="Stretch"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Stretch">
            <StackPanel
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Orientation="Vertical"
                Spacing="16">
                <widgets:TranslatedTextBlock Text="The following settings will be applied each time this package is installed, updated or removed." />
                <Border
                    Padding="16,12,16,12"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" MaxWidth="200" />
                            </Grid.ColumnDefinitions>
                            <widgets:TranslatedTextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Architecture to install:" />
                            <ComboBox
                                Name="ArchitectureComboBox"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                SelectedIndex="0" />
                        </Grid>
                        <controls:WrapPanel HorizontalSpacing="16" VerticalSpacing="0">
                            <CheckBox Name="AdminCheckBox">
                                <widgets:TranslatedTextBlock Text="Run as admin" />
                            </CheckBox>
                            <CheckBox Name="InteractiveCheckBox">
                                <widgets:TranslatedTextBlock Text="Interactive installation" />
                            </CheckBox>
                            <CheckBox Name="HashCheckbox">
                                <widgets:TranslatedTextBlock HorizontalAlignment="Stretch" Text="Skip hash check" />
                            </CheckBox>
                        </controls:WrapPanel>
                    </StackPanel>
                </Border>
                <Border
                    Padding="16,12,16,12"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" MaxWidth="200" />
                            </Grid.ColumnDefinitions>
                            <widgets:TranslatedTextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Version to install:" />

                            <ComboBox
                                Name="VersionComboBox"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center" />

                            <ProgressBar
                                Name="VersionProgress"
                                Grid.Column="1"
                                Margin="1,0,1,0"
                                VerticalAlignment="Top"
                                CornerRadius="4,4,0,0"
                                IsIndeterminate="True"
                                Visibility="Visible" />
                        </Grid>
                        <controls:WrapPanel HorizontalSpacing="16" VerticalSpacing="0">

                            <CheckBox Name="IgnoreUpdatesCheckbox" Grid.Column="0">
                                <widgets:TranslatedTextBlock Text="Ignore future updates for this package" />
                            </CheckBox>
                            <CheckBox Name="SkipMinorUpdatesCheckbox" Grid.Column="2">
                                <widgets:TranslatedTextBlock Text="Skip minor updates for this package" />
                            </CheckBox>
                        </controls:WrapPanel>
                    </StackPanel>
                </Border>

                <Border
                    Padding="16,12,16,12"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" MaxWidth="200" />
                            </Grid.ColumnDefinitions>
                            <widgets:TranslatedTextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Installation scope:" />
                            <ComboBox
                                Name="ScopeCombo"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center" />
                        </Grid>
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" MaxWidth="96" />
                                <ColumnDefinition Width="*" MaxWidth="96" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <widgets:TranslatedTextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Install location:" />
                            <HyperlinkButton
                                Name="SelectDir"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Click="SelectDir_Click">
                                <widgets:TranslatedTextBlock Text="Select" />
                            </HyperlinkButton>
                            <HyperlinkButton
                                Name="ResetDir"
                                Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                Click="ResetDir_Click">
                                <widgets:TranslatedTextBlock Text="Reset" />
                            </HyperlinkButton>
                            <TextBlock
                                Name="CustomInstallLocation"
                                Grid.Row="2"
                                Grid.ColumnSpan="3"
                                VerticalAlignment="Center"
                                FontFamily="Consolas"
                                Opacity="0.6"
                                Text="C:\SomeRandomPath\HelloWorld"
                                TextWrapping="Wrap" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border
                    Padding="16,12,16,12"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <widgets:TranslatedTextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Custom arguments:" />
                            <TextBox
                                Name="CustomParameters"
                                Grid.Column="1"
                                Padding="5,7,5,5"
                                FontFamily="Consolas"
                                TextWrapping="Wrap" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollView>
        <!--  Close Button  -->
        <widgets:DialogCloseButton Margin="0,-63,-24,0" Click="CloseButton_Click" />
    </Grid>
</Page>
